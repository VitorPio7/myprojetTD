    .colum2 {
      display: grid;
      grid-template-rows: 1fr 3fr 2fr 2f;
    }
    .colum2 > .text {
      padding-left: 40px;
      padding-right: 40px;
      font-size: 20px;
    }
    .colum2 > .title {
      color: white;
      font-size: 30px;
    }
    .button > input {
      font-size: 15px;
    }
    .description > p {
