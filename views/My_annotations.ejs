    align-items: center;
    justify-content: center;
  }
  .button {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .button input {
    cursor: pointer;
    height: 50px;
    width: 150px;
    border: radius 10px;
    border-radius: 20px;
    background-color: #717273;
    color: white;
    border: transparent;
  }
  .description {
    display: grid;
    justify-content: center;
    height: 50%;
  }
  .description > p {
    margin: 10px;
  }
  .colum2 {
    display: grid;
    grid-template-rows: 1fr 3fr 2fr 2f;
  }
  .colum2 > .title {
    display: flex;
    justify-content: center;
    color: white;
    font-size: xx-large;
    font-weight: 600;
  }
  .colum2 > .text {
    padding: 20px;
    color: white;
    text-align: justify;
  }
  .buttons > input {
    width: 150px;
    height: 50px;
    border-radius: 20px;
    border: none;
  }
  .buttons {
    display: flex;
    justify-content: end;
    padding-right: 20px;
    gap: 5px;
  }
  .edit {
    background-color: #ffbd59;
    cursor: pointer;
  }
  .delete {
    background-color: #ff3131;
    cursor: pointer;
  }
  .colum2 > a {
    display: flex;
    flex-direction: row;
    justify-content: center;
  }
